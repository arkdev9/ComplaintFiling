extends layout

block body-pack
	.container
		.row
			.col-md-3
			.col-md-6.mt-5

				h1.text-center E-Complaint Filing Login

				form.mt-5(action="/auth/login" method="POST")
					.form-group
						label(for="username") Username
						input.form-control(type="username" name="username")
					.form-group
						label(for="password") Password
						input.form-control(type="password" name="password")
					.form-group
						label(for="role") Role
						select.form-control(name="role")
							option(value="civilian") Civilian
							option(value="police") Police

					button.btn.btn-primary(type="submit") Login